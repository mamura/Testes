{
    "name": "connecta/application-admin",
    "type": "library",
    "version": "1.0.0",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Connecta\\ApplicationAdmin\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Marcos Heleno Vieira de Oliveira",
            "email": "marcos.heleno@iebtinnovation.com"
        }
    ],
    "require": {
        "php": "8.3.*",
        "connecta/domain-commission-type": "1.0.*",
        "connecta/domain-origin": "1.0.*"
    },
    "require-dev": {
        "pestphp/pest": "^3.7",
        "mockery/mockery": "^1.6",
        "laravel/framework": "11.0"
    },
    "repositories": [
        {
            "type": "path",
            "url" : "../../*/*",
            "options": {
                "symlink": true
            }
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
      "coverage": [
        "path=${path:-$(pwd)/coverage} && ./vendor/bin/pest --compact --coverage-php \"$path/coverage.cov\" ",
        "path=${path:-$(pwd)/coverage} && ./vendor/bin/pest --compact --coverage-clover \"$path/coverage.xml\" > /dev/null 2>&1"
      ]
    }
}
