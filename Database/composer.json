{
  "name": "connecta/infrastructure-database",
  "version": "1.0.0",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Connecta\\InfrastructureDatabase\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Marcos Heleno Vieira de Oliveira",
      "email": "marcos.heleno@iebtinnovation.com"
    }
  ],
  "require": {
    "php": "8.3.*"
  },
  "require-dev": {
    "pestphp/pest": "^3.7",
    "mockery/mockery": "^1.6"
  },
  "repositories": [
    {
      "type": "path",
      "url" : "../../*/*",
      "options": {
        "symlink": true
      }
    }
  ],
  "scripts": {
      "coverage": [
        "path=${path:-$(pwd)/coverage} && ./vendor/bin/pest --compact --coverage-php \"$path/coverage.cov\" ",
        "path=${path:-$(pwd)/coverage} && ./vendor/bin/pest --compact --coverage-clover \"$path/coverage.xml\" > /dev/null 2>&1"
      ]
    },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
